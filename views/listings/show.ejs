<% layout("layouts/boilerplate") %>
<body>
    <div class="listing-details-wrapper">
        <h4><%= listing.title %></h4>
        <div class="listing-desc">
            <div class="image-div">
                <img src="<%= listing.image.url %>" alt="Listing Image">
            </div>
            <ul>
                <li><i>Owned by: </i><b><%= listing.owner.username %></b></li>
                <li><%= listing.description %></li>
                <li>â‚¹ <%= listing.price.toLocaleString("en-IN") %>/night</li>
                <li><%= listing.location %>, <%= listing.country %></li>
            </ul>
        </div>
        <div style="display: flex; flex-direction: column; justify-content: center; align-items: center; gap: 1rem;">
            <div style="display: flex;">
                <% if(currUser && currUser._id.equals(listing.owner._id)) { %>
                    <form action="/listings/<%= listing._id %>/edit" method="get"><button class="edit-btn">Edit</button></form>
                    &nbsp;&nbsp;
                    <form method="post" action="/listings/<%= listing._id %>?_method=DELETE">
                        <button class="delete-btn">Delete</button>
                    </form>
                    &nbsp;&nbsp;
                <% } %>
            </div>
            <a class="go-back-btn" href="/listings">
                <i class="fa-solid fa-angle-left"></i>&nbsp;
                <span>go back to home</span>
            </a>
        </div>
        <div class="reviews-wrapper">
            <% if(currUser) { %>
                <div class="reviews-input">
                    <h4 style="margin-bottom: 1rem;">Leave a review!</h4>
                    <form method="post" action="/listings/<%= listing._id %>/reviews" novalidate class="needs-validation">
                        <div class="rating-div">
                            <label for="rating" class="form-label">Rating</label>
                            <fieldset class="starability-slot">
                                <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                                <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                                <label for="first-rate1" title="Terrible">1 star</label>
                                <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                                <label for="first-rate2" title="Not good">2 stars</label>
                                <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                                <label for="first-rate3" title="Average">3 stars</label>
                                <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                                <label for="first-rate4" title="Very good">4 stars</label>
                                <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                                <label for="first-rate5" title="Amazing">5 stars</label>
                            </fieldset>
                        </div>
                        <div class="input-group">
                            <span class="input-group-text">Comments</span>
                            <textarea class="form-control" name="review[comment]" aria-label="With textarea" required ></textarea>
                            <div class="invalid-feedback">Please add some comments for review</div>
                        </div>
                        <br>
                        <button type="submit" class="btn btn-outline-dark">Submit</button>
                    </form>
                </div>
            <% } %>
            
            
            <div class="all-reviews-wrapper">
                <h4>All Reviews</h4>
                <div class="all-reviews">
                    <% if(!listing.reviews.length) { %>
                        <h6>No reviews posted yet!</h6>
                    <% } %>
                    <% for(let review of listing.reviews) { %>
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title"><i>@<%= review.author.username %></i></h5>
                                <p class="starability-result card-text" data-rating="<%= review.rating %>"></p>
                                <p class="card-text">"<%= review.comment %>"</p>
                            </div>
                            <% if(currUser && currUser._id.equals(review.author._id)) { %>
                                <form method="post" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                                    <button class="btn btn-dark m-2">Delete</button>
                                </form>
                            <% } %>
                          </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</body>